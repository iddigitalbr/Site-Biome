RewriteEngine On

# Rotas Amigáveis

# Painel Administrativo
RewriteRule ^painel/?$ admin/index.php [L]
RewriteRule ^login/?$ admin/login.php [L]
RewriteRule ^logout/?$ admin/logout.php [L]

# Proteger arquivos de sistema
RewriteRule ^(config|includes)/ - [F,L]
RewriteRule \.sql$ - [F,L]

